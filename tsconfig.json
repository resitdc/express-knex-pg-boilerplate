{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#src/*": ["src/*"],
      "#r/*": ["src/routes/*"],
      "#mw/*": ["src/middlewares/*"],
      "#c/*": ["src/controllers/*"],
      "#m/*": ["src/models/*"],
      "#u/*": ["src/utils/*"],
      "#cf/*": ["src/config/*"]
    }
  }
}
