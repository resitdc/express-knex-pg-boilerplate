{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"],
      "routes/*": ["src/routes/*"],
      "middlewares/*": ["src/middlewares/*"],
      "controllers/*": ["src/controllers/*"],
      "models/*": ["src/models/*"],
      "utils/*": ["src/utils/*"],
      "config/*": ["src/config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
